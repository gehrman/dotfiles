[core]
    autocrlf = false
    excludesfile = ~/.gitignore
    preloadIndex = true
    fscache = true
[color]
    ui = true
    whitespace = red
[push]
    default = current
[pull]
    rebase = true
[fetch]
    prune = true
[alias]
    co = checkout
    cwm = commit -m
    amend = commit --amend
    popstash = stash pop
    liststash = stash list
    showstash = stash show -p
    skip = rebase --skip
    cont = rebase --continue
    yep = "!git checkout --ours -- $1 && git add $1"
    nope = "!git checkout --theirs -- $1 && git add $1"
[merge]
    conflictstyle = diff3
[include]
    path = .gitconfig.site
[user]
	name = Geoff Ehrman
	email = gehrman@wayfair.com
