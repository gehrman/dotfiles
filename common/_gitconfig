[color]
    ui = true
    whitespace = red
[push]
    default = current
[fetch]
    prune = true
[core]
    autocrlf = false
    excludesfiles = ~/.gitignore
    preloadIndex = true
    fscache = true
[alias]
    co = checkout
    cwm = commit -m
    cawm = commit -am
    amend = commit --amend
    popstash = stash pop
    liststash = stash list
    showstash = stash show -p
[merge]
    conflictstyle = diff3
[include]
    path = .gitconfig.site
