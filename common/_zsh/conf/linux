# Wayrunner completions
autoload bashcompinit
bashcompinit

# Use Wayfair supported python.
if [ -d /wayfair/pkg/python2.7 ]; then
  export PATH=/wayfair/pkg/python2.7/latest/bin:~/.bin:/usr/local/git/bin:$PATH
fi
export AIRFLOW_HOME=/wayfair/app/airflow

# Linux-specific aliases
alias l="ls -lh"

# ...yep, I did this.
alias gogogadget_vsql="/opt/vertica/bin/vsql -C -h vertica.csnzoo.com"
alias gogogadget_hive='beeline -u jdbc:hive2://bigdatahive01.host.bo1.csnzoo.com:10000 -n gehrman'

# Use ipython for pyspark.
alias ipyspark="PYSPARK_PYTHON=ipython pyspark"
